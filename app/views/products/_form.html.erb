<%= form_with(model: @product) do |form| %>
  <% if @product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <h5 class="card-header"><i class="bi bi-box"></i>&nbsp;Product Details</h5>
    <div class="card-body">
      <h5 class="card-title">
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">Name</span>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter name" %>
        </div>
      </h5>
      <p class="card-text">
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">Description</span>
          <%= form.text_area :description, class:"form-control" %>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">Price</span>
          <%= form.number_field :price, class:"form-control" %>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">Stock</span>
          <%= form.number_field :stock, class:"form-control" %>
        </div>
      </p>
      <div>
        <%= form.submit(@product.persisted? ? "Update Product" : "Create Product", class: "btn btn-success") %>
      </div>
    </div>
  </div>
<% end %>
